@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Css/main.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Custom/main.js"></script>

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Friend Finder</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                        <li class=""><a href="/Home/Index">Home</a></li>
                        <li><a href="/Home/Profile">Profile</a></li>
                        <li><a href="/Message/Index">Messages <span class="badge" id="messageNo"></span></a></li>
                    </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Welcome @User.Identity.Name</a></li>
                    <li>@Html.ActionLink("Sign Out", "LogOut", "Login")</li>
                </ul>
            }  
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container" style="margin-top:100px;">

        <!-- Main component for a primary marketing message or call to action -->
        @RenderBody()

    </div> <!-- /container -->
</body>
</html>
